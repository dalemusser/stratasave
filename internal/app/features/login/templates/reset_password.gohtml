{{ define "login/reset_password" }}
  {{ template "layout" . }}
{{ end }}

{{ define "content" }}
<div class="flex flex-col h-full">
<div class="mb-4">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">ğŸ”‘ Reset Password</h1>
</div>

<div class="p-4 bg-white dark:bg-gray-800 rounded shadow text-gray-700 dark:text-gray-300 text-sm flex-1 mb-2">
  {{ if .Error }}
    <div class="bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 p-2 rounded mb-4 max-w-md">
      {{ .Error }}
    </div>
    {{ if not .Token }}
      <p class="max-w-md">
        <a href="/login/forgot-password" class="text-indigo-600 dark:text-indigo-400 hover:underline">Request a new reset link â†’</a>
      </p>
    {{ end }}
  {{ end }}

  {{ if .Success }}
    <div class="bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 p-2 rounded mb-4 max-w-md">
      {{ .Success }}
    </div>
    <p class="max-w-md">
      <a href="/login" class="text-indigo-600 dark:text-indigo-400 hover:underline">â† Go to Login</a>
    </p>
  {{ else if .Token }}
    <p class="mb-3 max-w-md">
      Enter your new password below.
    </p>

    <form method="POST" action="/login/reset-password" class="space-y-3 max-w-md">
      <input type="hidden" name="csrf_token" value="{{ .CSRFToken }}">
      <input type="hidden" name="token" value="{{ .Token }}">

      <!-- New Password Field -->
      <div>
        <label for="password" class="block font-semibold mb-1">New Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="w-full border border-gray-300 dark:border-gray-600 rounded px-2 py-1 dark:bg-gray-700 dark:text-gray-100"
          autocomplete="new-password"
          minlength="8"
          autofocus
          required
        />
        <p class="text-xs text-gray-500 dark:text-gray-400 mt-1">Must be at least 8 characters</p>
      </div>

      <!-- Confirm Password Field -->
      <div>
        <label for="confirm_password" class="block font-semibold mb-1">Confirm Password</label>
        <input
          type="password"
          id="confirm_password"
          name="confirm_password"
          class="w-full border border-gray-300 dark:border-gray-600 rounded px-2 py-1 dark:bg-gray-700 dark:text-gray-100"
          autocomplete="new-password"
          minlength="8"
          required
        />
      </div>

      <!-- Submit Button -->
      <button
        type="submit"
        class="bg-indigo-600 text-white px-3 py-1 rounded hover:bg-indigo-700"
      >
        Reset Password
      </button>
    </form>
  {{ end }}
</div>
</div>
{{ end }}
