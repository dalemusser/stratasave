{{ define "login/forgot_password" }}
  {{ template "layout" . }}
{{ end }}

{{ define "content" }}
<div class="flex flex-col h-full">
<div class="mb-4">
  <h1 class="text-2xl font-bold text-gray-900 dark:text-gray-100">ğŸ”‘ Forgot Password</h1>
</div>

<div class="p-4 bg-white dark:bg-gray-800 rounded shadow text-gray-700 dark:text-gray-300 text-sm flex-1 mb-2">
  {{ if .Error }}
    <div class="bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-400 p-2 rounded mb-4 max-w-md">
      {{ .Error }}
    </div>
  {{ end }}

  {{ if .Success }}
    <div class="bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 p-2 rounded mb-4 max-w-md">
      {{ .Success }}
    </div>
    <p class="max-w-md">
      <a href="/login" class="text-indigo-600 dark:text-indigo-400 hover:underline">â† Back to Login</a>
    </p>
  {{ else }}
    <p class="mb-3 max-w-md">
      Enter your Login ID and we'll send a password reset link to your email address.
    </p>

    <form method="POST" action="/login/forgot-password" class="space-y-3 max-w-md">
      <input type="hidden" name="csrf_token" value="{{ .CSRFToken }}">
      <!-- Login ID Field -->
      <div>
        <label for="login_id" class="block font-semibold mb-1">Login ID</label>
        <input
          type="text"
          id="login_id"
          name="login_id"
          value="{{ .LoginID }}"
          class="w-full border border-gray-300 dark:border-gray-600 rounded px-2 py-1 dark:bg-gray-700 dark:text-gray-100"
          autocomplete="username"
          autofocus
          required
        />
      </div>

      <!-- Submit Button -->
      <div class="flex items-center gap-4">
        <button
          type="submit"
          class="bg-indigo-600 text-white px-3 py-1 rounded hover:bg-indigo-700"
        >
          Send Reset Link
        </button>
        <a href="/login" class="text-indigo-600 dark:text-indigo-400 hover:underline text-sm">â† Back to Login</a>
      </div>
    </form>
  {{ end }}
</div>
</div>
{{ end }}
